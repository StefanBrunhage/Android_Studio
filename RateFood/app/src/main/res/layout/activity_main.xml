<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fruit"
    tools:context="com.example.ratefood.MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <EditText
        android:id="@+id/WebsiteEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Website URL"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/UploadImageView" />

    <Button
        android:id="@+id/SaveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginTop="21dp"
        android:alpha=".7"
        android:text="Save Profile"
        app:layout_constraintEnd_toEndOf="@+id/UploadImageView"
        app:layout_constraintTop_toTopOf="@+id/UploadImageView" />

    <ImageView
        android:id="@+id/UploadImageView"
        android:layout_width="125dp"
        android:layout_height="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toTopOf="@+id/WebsiteEditText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_upload_you_tube" />

</android.support.constraint.ConstraintLayout>
